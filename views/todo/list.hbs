{{#extend "scripts"}}
<script src="/js/list.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Felvett feladatok</h1>
</div>

<table class="table table-striped table-hover" id="todoTable">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Feladat neve</th>
            <th>Feladat leírása</th>
        </tr>   
    </thead>
    <tbody>
        {{#each errors}}
        <tr>
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{location}}</td>
            <td><span class="badge">{{numberOfMessages}}</span> {{description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todo/new" class="btn btn-default">Új feladat</a></p>
